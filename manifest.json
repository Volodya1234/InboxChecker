{
	"manifest_version": 2,
	"version": "1.0.0",
	"name": "Inbox by Gmail Checker",
	"description": "Displays the number of unread messages in your Gmail Inbox. You can also click the button to open your Inbox.",
	"permissions":
	[
		"alarms",
		"notifications",
		"storage",
		"tabs",
		"https://mail.google.com/mail/",
		"https://www.gravatar.com/avatar/"
	],
	"background":
	{
		"persistent": false,
		"scripts":
		[
			"background.js"
		]
	},
	"browser_action":
	{
		"default_icon": "icon_not_logged_in.png",
		"default_title": "Inbox"
	},
	"icons":
	{
		"128": "icon_128.png"
	}
}
